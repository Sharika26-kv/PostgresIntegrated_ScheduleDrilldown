function initDatabase() {
    return new Promise((resolve, reject) => {
        db = new sqlite3.Database(DB_PATH, sqlite3.OPEN_READONLY, (err) => {
            if (err) {
                console.error('‚ùå Error opening database:', err.message);
                reject(err);
            } else {
                console.log('‚úÖ Connected to P6 SQLite database for Gantt chart');
                console.log('üìÅ Database:', DB_PATH);
                resolve();
            }
        });
    });
}

// Get all projects
function getProjects(req, res) {
    console.log('üìã Fetching projects...');
    
    const query = `
        SELECT 
            proj_id,
            proj_short_name,
            proj_short_name as proj_name,
            plan_start_date,
            plan_end_date,
            last_recalc_date as data_date
        FROM PROJECT 
        ORDER BY proj_short_name
    `;
    
    db.all(query, [], (err, rows) => {
        if (err) {
            console.error('‚ùå Error fetching projects:', err);
            res.status(500).json({ error: err.message });
        } else {
            console.log(`‚úÖ Found ${rows.length} projects`);
            res.json(rows);
        }
    });
}

// Get project tasks with WBS information
function getProjectTasks(req, res) {
    const { projectId } = req.params;
    console.log(`üìä Fetching tasks for project: ${projectId}`);
    
    const query = `
       WITH RECURSIVE wbs_hierarchy (
     proj_id,
    wbs_id,
    wbs_name,
    parent_wbs_id,
    path,
    seq_num,
    wbs_short_name
) AS (
    -- Base case: root WBS items
    SELECT 
	    proj_id,
        wbs_id,
        wbs_name,
        parent_wbs_id,
        CAST(wbs_id AS TEXT) AS path,
        '1' AS seq_num,
        1 AS wbs_short_name
    FROM projwbs p
    WHERE proj_id = ?
      AND proj_node_flag = 'Y'

    UNION ALL

    -- Recursive case: children of WBS
    SELECT
	    w.proj_id,
        w.wbs_id,
        w.wbs_name,
        w.parent_wbs_id,
        h.path || ' > ' || w.wbs_id AS path,
        h.seq_num || '.' || printf('%02d', (
            SELECT COUNT(*) + 1
            FROM projwbs w2
            WHERE w2.parent_wbs_id = w.parent_wbs_id
              AND w2.wbs_short_name < w.wbs_short_name
        )) AS seq_num,
        h.wbs_short_name + 1
    FROM projwbs w
    JOIN wbs_hierarchy h ON w.parent_wbs_id = h.wbs_id
    WHERE w.proj_id = ?
)
SELECT 
   
	    -- WBS information
    w.seq_num,
    w.wbs_name,
    w.wbs_short_name,
    w.parent_wbs_id,
    t.task_id,
    t.proj_id,
    t.task_code,
    t.task_name,
    t.wbs_id,
    
    -- Scheduling dates
    t.act_start_date,
    t.act_end_date,
    t.act_work_qty,
    t.remain_work_qty,
    t.phys_complete_pct,
    
    -- CPM dates and floats
    t.early_start_date,
    t.early_end_date,
    t.late_start_date,
    t.late_end_date,
    t.total_float_hr_cnt,
    t.free_float_hr_cnt,
    
    -- Baseline dates
    t.target_start_date,
    t.target_end_date,
    t.target_work_qty,
    t.target_drtn_hr_cnt,
    
    -- Task properties
    t.task_type,
    t.driving_path_flag,
    t.cstr_type,
    t.cstr_date,
    t.status_code
    

    
FROM wbs_hierarchy w
LEFT JOIN TASK t 
    ON t.wbs_id = w.wbs_id AND t.proj_id = w.proj_id 
--WHERE t.proj_id = 389
ORDER BY w.seq_num, t.task_code
    `;
    
    db.all(query, [projectId, projectId], (err, rows) => {
        if (err) {
            console.error('‚ùå Error fetching tasks:', err);
            res.status(500).json({ error: err.message });
        } else {
            console.log(`‚úÖ Found ${rows.length} tasks for project ${projectId}`);
            res.json(rows);
        }
    });
}

// Get project WBS hierarchy
function getProjectWBS(req, res) {
    const { projectId } = req.params;
    console.log(`üå≥ Fetching WBS for project: ${projectId}`);
    
    const query = `
        WITH RECURSIVE wbs_hierarchy (
            wbs_id,
            wbs_name,
            parent_wbs_id,
            path,
            seq_num,
            wbs_short_name
        ) AS (
            -- Base case: root WBS items
            SELECT 
                wbs_id,
                wbs_name,
                parent_wbs_id,
                CAST(wbs_id AS TEXT) AS path,
                '1' AS seq_num,
                1 AS wbs_short_name
            FROM projwbs p
            WHERE proj_id = ?

            UNION ALL

            -- Recursive case: children of WBS
            SELECT 
                w.wbs_id,
                w.wbs_name,
                w.parent_wbs_id,
                h.path || ' > ' || w.wbs_id AS path,
                h.seq_num || '.' || printf('%02d', (
                    SELECT COUNT(*) + 1
                    FROM projwbs w2
                    WHERE w2.parent_wbs_id = w.parent_wbs_id
                      AND w2.wbs_short_name < w.wbs_short_name
                )) AS seq_num,
                h.wbs_short_name + 1
            FROM projwbs w
            JOIN wbs_hierarchy h ON w.parent_wbs_id = h.wbs_id
            WHERE proj_id = ?
        )

        SELECT w.*, p.proj_id, p.obs_id FROM wbs_hierarchy w
        join PROJWBS p on p.wbs_id = w.wbs_id
        order by seq_num
    `;
    
    db.all(query, [projectId, projectId], (err, rows) => {
        if (err) {
            console.error('‚ùå Error fetching WBS:', err);
            res.status(500).json({ error: err.message });
        } else {
            console.log(`‚úÖ Found ${rows.length} WBS items for project ${projectId}`);
            res.json(rows);
        }
    });
}

// Get project dependencies
function getProjectDependencies(req, res) {
    const { projectId } = req.params;
    console.log(`üîó Fetching dependencies for project: ${projectId}`);
    
    const query = `
        SELECT 
            tp.task_pred_id,
            tp.task_id,
            tp.pred_task_id,
            tp.pred_type,
            tp.lag_hr_cnt,
            t1.task_code as successor_act_id,
            t2.task_code as predecessor_act_id
        FROM TASKPRED tp
        JOIN TASK t1 ON tp.task_id = t1.task_id
        JOIN TASK t2 ON tp.pred_task_id = t2.task_id
        WHERE tp.proj_id = ?
    `;
    
    db.all(query, [projectId], (err, rows) => {
        if (err) {
            console.error('‚ùå Error fetching dependencies:', err);
            res.status(500).json({ error: err.message });
        } else {
            console.log(`‚úÖ Found ${rows.length} dependencies for project ${projectId}`);
            res.json(rows);
        }
    });
}

// Get project resource assignments
function getProjectResources(req, res) {
    const { projectId } = req.params;
    console.log(`üë• Fetching resources for project: ${projectId}`);
    
    const query = `
        SELECT 
            tr.taskrsrc_id,
            tr.task_id,
            tr.rsrc_id,
            tr.target_qty,
            tr.remain_qty,
            tr.cost_qty_link_flag,
            t.task_code as act_id,
            t.task_name as act_name,
            r.rsrc_name,
            r.rsrc_type
        FROM TASKRSRC tr
        JOIN RSRC r ON tr.rsrc_id = r.rsrc_id
        JOIN TASK t ON tr.task_id = t.task_id
        WHERE tr.proj_id = ?
        ORDER BY t.task_code
    `;
    
    db.all(query, [projectId], (err, rows) => {
        if (err) {
            console.error('‚ùå Error fetching resources:', err);
            res.status(500).json({ error: err.message });
        } else {
            console.log(`‚úÖ Found ${rows.length} resource assignments for project ${projectId}`);
            res.json(rows);
        }
    });
}

// Get AWP hierarchy for a project
function getAWPHierarchy(req, res) {
    const projectId = req.params.projectId || req.query.projectId || req.query.project_id;
    console.log(`üèóÔ∏è Fetching AWP hierarchy for project: ${projectId}`);
    
    const query = `
        WITH RECURSIVE H_Activity AS (
            -- Base level (root nodes)
            SELECT 
                actv_code_id,
                ac.short_name AS Activity_code,
                ac.actv_code_name AS Activity_name,
                parent_actv_code_id,
                at.actv_code_type,
                ac.color,
                '1' AS sequence,
                1 AS level
            FROM Actvcode ac
             LEFT JOIN actvtype at ON ac.actv_code_type_id = at.actv_code_type_id
            WHERE ac.parent_actv_code_id IS '' OR ac.parent_actv_code_id IS NULL

            UNION ALL

            -- Recursive: get children of each node
            SELECT 
                ac.actv_code_id,
                ac.short_name AS Activity_code,
                ac.actv_code_name AS Activity_name,
                ac.parent_actv_code_id,
                at.actv_code_type,
                ac.color,
                h.sequence || '.' || (
                    SELECT 
                        printf('%02d', COUNT(*))
                    FROM Actvcode siblings
                    WHERE siblings.parent_actv_code_id = ac.parent_actv_code_id
                      AND siblings.seq_num <= ac.seq_num
                ) AS sequence,
                h.level + 1
            FROM Actvcode ac
            INNER JOIN H_Activity h ON h.actv_code_id = ac.parent_actv_code_id
             LEFT JOIN actvtype at ON ac.actv_code_type_id = at.actv_code_type_id
        )

        SELECT DISTINCT h.*
        , ta.proj_id 
        FROM H_Activity h
        LEFT JOIN TASKACTV ta ON h.actv_code_id = ta.actv_code_id 
        WHERE actv_code_type LIKE '%AWP%'
        ${projectId ? 'AND (ta.proj_id = ? OR ta.proj_id IS NULL)' : ''}
        ORDER BY h.sequence
    `;
    
    const params = projectId ? [projectId] : [];
    
    db.all(query, params, (err, rows) => {
        if (err) {
            console.error('‚ùå Error fetching AWP hierarchy:', err);
            res.status(500).json({ error: err.message });
        } else {
            console.log(`‚úÖ Found ${rows.length} AWP hierarchy items for project ${projectId || 'all'}`);
            res.json(rows);
        }
    });
}

// Get AWP hierarchy with associated future tasks
function getAWPHierarchyWithTasks(req, res) {
    const projectId = req.query.projectId;
    console.log(`üèóÔ∏è Fetching AWP hierarchy with future tasks for project: ${projectId}`);
    
    if (!projectId) {
        res.status(400).json({ error: 'projectId is required' });
        return;
    }
    
    const query = `
        WITH RECURSIVE H_Activity AS (
            -- Base level (root nodes)
            SELECT 
                actv_code_id,
                ac.short_name AS Activity_code,
                ac.actv_code_name AS Activity_name,
                parent_actv_code_id,
                at.actv_code_type,
                ac.color,
                '1' AS sequence,
                1 AS level
            FROM Actvcode ac
             LEFT JOIN actvtype at ON ac.actv_code_type_id = at.actv_code_type_id
            WHERE ac.parent_actv_code_id IS ''

            UNION ALL

            -- Recursive: get children of each node
            SELECT 
                ac.actv_code_id,
                ac.short_name AS Activity_code,
                ac.actv_code_name AS Activity_name,
                ac.parent_actv_code_id,
                at.actv_code_type,
                ac.color,
                h.sequence || '.' || (
                    SELECT 
                        printf('%02d', COUNT(*))
                    FROM Actvcode siblings
                    WHERE siblings.parent_actv_code_id = ac.parent_actv_code_id
                      AND siblings.seq_num <= ac.seq_num
                ) AS sequence,
                h.level + 1
            FROM Actvcode ac
            INNER JOIN H_Activity h ON h.actv_code_id = ac.parent_actv_code_id
             LEFT JOIN actvtype at ON ac.actv_code_type_id = at.actv_code_type_id
        )

        SELECT distinct h.*
        , ta.proj_id 

        FROM H_Activity h
        LEFT JOIN TASKACTV ta ON h.actv_code_id = ta.actv_code_id 
        where actv_code_type like '%AWP%'
        AND ta.proj_id = ?
        ORDER BY h.sequence
    `;
    
    db.all(query, [projectId], (err, rows) => {
        if (err) {
            console.error('‚ùå Error fetching AWP hierarchy with tasks:', err);
            console.error('‚ùå SQL Query:', query);
            res.status(500).json({ error: err.message });
        } else {
            console.log(`‚úÖ Found ${rows.length} AWP hierarchy items with future tasks for project ${projectId}`);
            res.json(rows);
        }
    });
}

// Get tasks with AWP associations for a project
function getTasksWithAWP(req, res) {
    const projectId = req.params.projectId || req.query.projectId;
    console.log(`üîó Fetching tasks with AWP associations for project: ${projectId}`);
    
    if (!projectId) {
        res.status(400).json({ error: 'projectId is required' });
        return;
    }
    
    // Simple query to get tasks linked to AWP codes
    const query = `
        SELECT
            -- Task details
            t.task_id,
            t.task_name,
            t.target_start_date,
            t.target_end_date,
            t.act_start_date,
            t.act_end_date,
            t.status_code,
            t.target_drtn_hr_cnt,
            t.phys_complete_pct,
            t.task_code,
            t.driving_path_flag,
            
            -- AWP information
            ac.short_name AS awp_code,
            ac.actv_code_name AS awp_name,
            ac.actv_code_id,
            ac.parent_actv_code_id,
            ac.color,
            at.actv_code_type

        FROM TASK t
        INNER JOIN TASKACTV ta ON t.task_id = ta.task_id AND t.proj_id = ta.proj_id
        INNER JOIN Actvcode ac ON ta.actv_code_id = ac.actv_code_id
        LEFT JOIN actvtype at ON ac.actv_code_type_id = at.actv_code_type_id
        WHERE t.proj_id = ?
            AND at.actv_code_type LIKE '%AWP%'
        ORDER BY ac.short_name, t.task_code
    `;
    
    db.all(query, [projectId], (err, rows) => {
        if (err) {
            console.error('‚ùå Error fetching tasks with AWP:', err.message);
            console.error('‚ùå SQL Query:', query);
            res.status(500).json({ error: `Database error: ${err.message}` });
        } else {
            console.log(`‚úÖ Found ${rows.length} tasks with AWP associations for project ${projectId}`);
            res.json(rows);
        }
    });
}

